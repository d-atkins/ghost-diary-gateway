<h2>All Posts</h2>

  <% @posts.each do |post| %>
    <section class="post-<%= post.id %>">
    <p><%= link_to "Click to see post #{post.id}'s info.", "/posts/#{post.id}" %></p>
    <p><%= post.body %></p>
    </section>
  <% end %>

  <%= form_tag '/profile/posts', method: :post do %>
    <%= label_tag :body %>
    <%= text_area_tag :body %>

    <%= submit_tag 'Submit' %>
  <% end %>
