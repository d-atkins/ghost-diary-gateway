<h2>All Posts</h2>

  <% @posts.each do |post| %>
    <section class="post-<%= post.id %>">
    <p><%= link_to "Click to see post #{post.id}'s info.", "/posts/#{post.id}" %></p>
    <p><%= post.body %></p>
    </section>
  <% end %>
  <div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <%= form_for(:static_pages, url: profile_posts_path, :html =>{:class => 'form-horizontal'}) do |f| %>
    <fieldset>
      <div class = "center form-group">
        <%= f.label :new_post, :class => "col-sm2 control-label" %>
      <div class = "col-sm-10">
    <%= text_area_tag 'post', nil, rows: 10, cols: 60, class: 'post_input'%>
    </div>
 </div>

  <div class = "center form-actions">
    <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
  </div>
</fieldset>
<%end%>
</div>
