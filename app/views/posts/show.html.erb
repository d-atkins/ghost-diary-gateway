<h2>Post</h2>

<p><%= @post.user.group.name %></p>
<p class='.day-week'><%= "#{@post.day.day_of_week}," %> Week <%= @post.day.week %></p>
<p><%= @post.body %></p>

<section id='reactions'>
  <%= button_to 'Like', post_reactions_path(@post.id, {type: 0}) %>
  <%= button_to 'Dislike', post_reactions_path(@post.id, {type: 1}) %>
  <%= button_to 'Can relate', post_reactions_path(@post.id, {type: 2}) %>
  <%= button_to 'Lol', post_reactions_path(@post.id, {type: 3}) %>
  <%= button_to 'Upset', post_reactions_path(@post.id, {type: 4}) %>
</section>
