<!DOCTYPE html>
<html>
  <head>
    <title>GhostDiaryGateway</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <center>

      <%= render partial: 'shared/navbar' %>

      <% flash.each do |name, msg| %>
        <div class= "<%=name%>-flash">
          <p><%= msg %></p>
        </div>
      <% end %>

      <%= yield %>

      <footer style="position:fixed;bottom:0;left:0;width:100%;", class='footer black'>
        <nav class="black">
          <ul>
            <p class="white-text"> Made By: David, Maria, Elom and Jenny</p>
          </ul>
        </nav>
      </footer>

    </center>

  </body>
</html>
