  <div class="ghost-body">
    <div class="eyeball"></div>
    <div class="eyeball"></div>
  </div>
  <div class="flap"></div>
  <div class="flap"></div>
  <div class="flap"></div>
  <div class="shadow"></div>
</div>

<p><%= @post.created_at.strftime("Posted on %m/%d/%Y at %I:%M%p") %></p>
