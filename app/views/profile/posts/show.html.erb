<h2>Post <%= @post.id %></h2>

<p>Group: <%= @post.day.group.name %></p>
<p>Week #<%= @post.day.week %></p>
<p>Day #<%= @post.day.day_of_week %></p>
<p>Date: <%= @post.created_at.strftime("Posted on %m/%d/%Y at %I:%M%p") %></p>
<p><%= @post.body %></p>

<div class="ghost-container">
   <div class="ghost-body" id="<%= @post.tone %>">
     <div class="eyeball"></div>
     <div class="eyeball"></div>
   </div>
   <div class="flap" id="flap-<%= @post.tone %>"></div>
   <div class="flap" id="flap-<%= @post.tone %>"></div>
   <div class="flap" id="flap-<%= @post.tone %>"></div>
   <div class="shadow"></div>
 </div>
