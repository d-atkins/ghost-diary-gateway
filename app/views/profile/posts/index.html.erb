<h2>Your Posts</h2>

  <% @posts.each do |post| %>
    <section class="post-<%= post.id %>">
    <p><%= post.body %> (<%= link_to "Click to see post #{post.id}'s info.", "/profile/posts/#{post.id}" %>)</p>
    <%= render partial: "shared/ghosts", locals: { tone: post.tone.downcase } %>
    </section>
  <% end %>
